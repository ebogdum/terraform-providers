variable "name" {
  description = "The name of the provider to create."
  type        = string

  validation {
    condition     = length(var.name) > 0
    error_message = "resource_aws_iam_saml_provider, name must not be empty."
  }
}

variable "saml_metadata_document" {
  description = "An XML document generated by an identity provider that supports SAML 2.0."
  type        = string

  validation {
    condition     = length(var.saml_metadata_document) > 0
    error_message = "resource_aws_iam_saml_provider, saml_metadata_document must not be empty."
  }
}

variable "tags" {
  description = "Map of resource tags for the IAM SAML provider."
  type        = map(string)
  default     = {}
}